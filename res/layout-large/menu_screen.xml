<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="40dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/title"
        android:padding="30dip"
        android:textSize="36sp" />


   <Button
       android:id="@+id/map_button"
       android:text="@string/map_label"
       android:drawableLeft="@drawable/search_icon"
       android:background="@drawable/btn_blue"
       style="@style/portrait_tablet_menu_button"></Button>


   <Button
       android:id="@+id/caf_button"
       android:text="@string/caf_label"
       android:drawableLeft="@drawable/caf_icon"
       android:background="@drawable/btn_red"
       style="@style/portrait_tablet_menu_button"></Button>


   <Button
       android:id="@+id/analytics_button"
       android:text="@string/analytics_label"
       android:drawableLeft="@drawable/analytics_icon"
       android:background="@drawable/btn_purple"
       style="@style/portrait_tablet_menu_button"></Button>


   <Button
       android:id="@+id/about_button"
       android:text="@string/about_label"
       android:drawableLeft="@drawable/about_icon"
       android:background="@drawable/btn_yellow"
       style="@style/portrait_tablet_menu_button"></Button>

   <Button
       android:id="@+id/debug_button"
       android:text="@string/debug_label"
       android:drawableLeft="@drawable/debug_icon"
       android:background="@drawable/btn_green"
       style="@style/portrait_tablet_menu_button"></Button>
            

</LinearLayout>